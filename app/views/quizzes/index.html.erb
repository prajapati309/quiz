<h1 class="text-3xl font-bold mb-8 text-gray-800">
  Choose a Quiz
</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <% @quizzes.each do |quiz| %>
    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition p-6">
      <h2 class="text-xl font-semibold mb-2 text-gray-900">
        <%= quiz.title %>
      </h2>

      <p class="text-sm text-gray-500 mb-4">
        <%= quiz.questions.count %> Questions
      </p>

      <%= link_to "Take Quiz",
          quiz_path(quiz),
          class: "inline-block bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg text-sm font-medium transition" %>
    </div>
  <% end %>
</div>
