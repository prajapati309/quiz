<h1 class="text-2xl font-bold mb-6 text-gray-900">
  <%= @quiz.title %>
</h1>

<% if params[:submission_id] %>
  <% submission = @quiz.submissions.find(params[:submission_id]) %>

  <div class="bg-green-50 border border-green-200 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-green-700 mb-2">
      Quiz Completed ðŸŽ‰
    </h2>
    <p class="text-lg">
      Your Score:
      <span class="font-bold">
        <%= submission.score %> / <%= submission.total %>
      </span>
    </p>

    <%= link_to "Take another quiz",
        root_path,
        class: "inline-block mt-4 text-blue-600 hover:underline" %>
  </div>

<% else %>

  <%= form_with url: submit_quiz_path(@quiz), method: :post do %>
    <% @quiz.questions.each_with_index do |q, index| %>
      <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <p class="font-medium text-gray-800 mb-4">
          <%= index + 1 %>. <%= q.text %>
        </p>

        <% if q.question_type == "mcq" %>
          <% q.options.each do |opt| %>
            <label class="block mb-2 cursor-pointer">
              <%= radio_button_tag "answers[#{q.id}]", opt, false, class: "mr-2" %>
              <%= opt %>
            </label>
          <% end %>

        <% elsif q.question_type == "boolean" %>
          <label class="block mb-2 cursor-pointer">
            <%= radio_button_tag "answers[#{q.id}]", "true", false, class: "mr-2" %>
            True
          </label>
          <label class="block cursor-pointer">
            <%= radio_button_tag "answers[#{q.id}]", "false", false, class: "mr-2" %>
            False
          </label>

        <% else %>
          <%= text_field_tag "answers[#{q.id}]",
              nil,
              class: "w-full border rounded-lg px-3 py-2 focus:ring focus:ring-blue-200" %>
        <% end %>
      </div>
    <% end %>

    <%= submit_tag "Submit Quiz",
        class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition" %>
  <% end %>

<% end %>
